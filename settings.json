{
  "[elixir]": {
    "editor.formatOnSave": true
  },
  // Based on Elixir formatter's style
  "elixirLS.suggestSpecs": false,
  "elixirLS.dialyzerEnabled": true,
  "editor.insertSpaces": true,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  // Provides smart completion for "do" and "fn ->" blocks. Does not run the Elixir formatter.
  "editor.formatOnType": true,
  // "editor.formatOnSave": true,
  // Misc
  "editor.wordBasedSuggestions": false,
  "editor.trimAutoWhitespace": false,
  "emmet.includeLanguages": {
    "html-eex": "html",
    "erb": "html",
  },
  "files.associations": {
    "*.eex": "html-eex",
    "*.leex": "html-eex",
    // "*.js": "javascriptreact"
  },
  "material-icon-theme.files.associations": {
    "*.go": "go_gopher",
    "*.html.erb": "html"
  },
  "material-icon-theme.saturation": 1,
  "material-icon-theme.opacity": 1,
  "files.eol": "\n",
  // Editor
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.tabCompletion": "on",
  "editor.minimap.enabled": false,
  // Aplica um sinal visual na esquerda da linha selecionada
  "editor.renderLineHighlight": "gutter",
  // Aplica linhas verticais para lembrar de quebrar linha em c√≥digos muito grandes
  "editor.rulers": [
    80,
    // 120
  ],
  // Editor Font Style
  "editor.lineHeight": 25,
  "editor.fontSize": 17,
  "editor.fontFamily": "Victor Mono",
  "editor.letterSpacing": 1,
  "editor.fontLigatures": true,
  "editor.fontWeight": "400",
  // Terminal Font Style
  "terminal.integrated.fontSize": 17,
  "terminal.integrated.fontFamily": "Victor Mono",
  "terminal.integrated.letterSpacing": 1,
  "terminal.integrated.fontWeight": 100,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorWidth": 1,
  // Terminal
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.cursorBlinking": true,
  // Live Server
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  "window.menuBarVisibility": "toggle",
  // https://github.com/ritwickdey/vscode-live-sass-compiler/blob/master/docs/settings.md
  "liveSassCompile.settings.formats": [
    {
      "format": "expanded",
      "extensionName": ".css",
      "savePath": "~/../css/"
    },
  ],
  "markdownlint.customRules": [
    "{docsmsft.docs-linting}/markdownlint-custom-rules/rules.js"
  ],
  "markdownlint.config": {
    "MD028": false
  },
  "workbench.startupEditor": "newUntitledFile",
  "editor.tokenColorCustomizations": {
    "[Bearded Theme Black & Amethyst]": {
      "textMateRules": [
        {
          "name": "<< >>",
          "scope": [
            "keyword.operator.bitwise.dart",
            "keyword.operator.comparison.dart"
          ],
          "settings": {
            "foreground": "#C7910C"
          }
        },
        {
          "name": "class",
          "scope": [
            "keyword.declaration.dart"
          ],
          "settings": {
            "foreground": "#C7910C",
          }
        }
      ]
    }
  },
  "elixirLinter.useStrict": true,
  "tabnine.experimentalAutoImports": true,
  "workbench.iconTheme": "bearded-icons",
  "terminal.integrated.tabs.enabled": false,
  "dart.previewFlutterUiGuides": false,
  "dart.previewFlutterUiGuidesCustomTracking": false,
  "[dart]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [
      80
    ],
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": false
  },
  // "dart.openDevTools": "flutter"

  // FVM - start
    "dart.flutterSdkPath": ".fvm/flutter_sdk",
    // Remove .fvm files from search
    "search.exclude": {
      "**/.fvm": true
    },
    // Remove from file watching
    "files.watcherExclude": {
      "**/.fvm": true
    },
    "workbench.colorTheme": "Bearded Theme Black & Amethyst",
    "security.workspace.trust.untrustedFiles": "open"
  // FVM - end
}
