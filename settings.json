{
  // Based on Elixir formatter's style
  "elixirLS.suggestSpecs": true,
  "elixirLS.dialyzerEnabled": true,
  "editor.insertSpaces": true,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  // Provides smart completion for "do" and "fn ->" blocks. Does not run the Elixir formatter.
  "editor.formatOnType": true,
  "editor.formatOnSave": true,
  // Misc
  "editor.wordBasedSuggestions": false,
  "editor.trimAutoWhitespace": false,
  "emmet.includeLanguages": {
    "html-eex": "html"
  },
  // elixir credo
  "elixir.credo.ignoreWarningMessages": true,
  "elixir.credo.lintEverything": true,
  "elixir.credo.strictMode": true,
  "erlang.enableExperimentalAutoComplete": true,
  // "files.associations": {
  //   "*.js": "javascriptreact"
  // },
  "files.eol": "\n",
  // Editor
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.tabCompletion": "on",
  "editor.minimap.enabled": false,
  // Aplica um sinal visual na esquerda da linha selecionada
  "editor.renderLineHighlight": "gutter",
  // Aplica linhas verticais para lembrar de quebrar linha em c√≥digos muito grandes
  "editor.rulers": [
    98,
    // 120
  ],
  // Editor Font Style
  "editor.lineHeight": 25,
  "editor.fontSize": 17,
  "editor.fontFamily": "Victor Mono",
  "editor.letterSpacing": 1,
  "editor.fontLigatures": false,
  "editor.fontWeight": "400",
  // Terminal Font Style
  "terminal.integrated.fontSize": 17,
  "terminal.integrated.fontFamily": "Victor Mono",
  "terminal.integrated.letterSpacing": 1,
  "terminal.integrated.fontWeight": 100,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorWidth": 1,
  // Terminal
  "terminal.integrated.defaultProfile.linux": "/bin/zsh",
  "terminal.integrated.defaultProfile.windows": "C:\\Program Files\\Git\\git-bash.exe",
  "terminal.integrated.cursorBlinking": true,
  // Live Server
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  "window.menuBarVisibility": "toggle",
  // https://github.com/ritwickdey/vscode-live-sass-compiler/blob/master/docs/settings.md
  "liveSassCompile.settings.formats": [
    {
      "format": "expanded",
      "extensionName": ".css",
      "savePath": "~/../css/"
    },
  ],
  "markdownlint.customRules": [
    "{docsmsft.docs-linting}/markdownlint-custom-rules/rules.js"
  ],
  "markdownlint.config": {
    "MD028": false
  },
  "workbench.colorCustomizations": {
    "[Community Material Theme Ocean High Contrast]": {
      "editor.background": "#090B10",
      // "editorCursor.foreground": "#7d4dcf",
      "titleBar.border": "#090B10",
      "editorGroupHeader.tabsBorder": "#090B10",
      "editorGroupHeader.tabsBackground": "#090B10",
      "tab.activeBorder": "#090B10",
      "tab.activeBorderTop": "#904dfd",
      // "tab.activeBackground": "#0E1015",
      "tab.activeForeground": "#9575CD",
      "tab.inactiveBackground": "#090B10",
      "tab.border": "#090B10",
      // "tab.hoverBackground": "#0B0D12",
      "breadcrumb.background": "#090B10",
      "statusBarItem.remoteBackground": "#090B10",
      "statusBarItem.remoteForeground": "#9575CD",
      "list.inactiveSelectionForeground": "#9575CD",
      "list.activeSelectionForeground": "#9575CD",
      // "activityBar.foreground": "#9575CD",
      "activityBarBadge.background": "#9575CD",
      "activityBar.border": "#090B10"
    }
  },
  "editor.tokenColorCustomizations": {
    "[Community Material Theme Ocean High Contrast]": {
      "textMateRules": [
        {
          "scope": "string",
          "settings": {
            "foreground": "#14AE60",
          }
        },
        {
          "scope": "keyword.control",
          "settings": {
            // "foreground": "#7743c9",
            "foreground": "#a770ff",
            "fontStyle": "italic"
          }
        },
        {
          "scope": "entity.name.function",
          "settings": {
            // "foreground": "#9575CD",
            // "fontStyle": "italic"
          }
        },
        {
          "scope": "punctuation",
          "settings": {
            "foreground": "#fff"
          }
        },
        {
          "name": "Elixir: module attributes",
          "scope": "variable.other.readwrite.module.elixir",
          "settings": {
            // "foreground": "#9575CD",
            // "foreground": "#3d90fd",
            // "fontStyle": "italic"
          }
        },
        {
          "name": "Elixir: atoms",
          // "scope": "constant.other.symbol.elixir",
          "scope": "constant",
          "settings": {
            // "fontStyle": "italic",
          }
        },
        {
          "name": "Elixir: modules",
          "scope": "variable.other.constant.elixir",
          "settings": {
            "foreground": "#FF4945",
          }
        },
      ]
    },
  },
  "workbench.startupEditor": "newUntitledFile",
  "workbench.iconTheme": "bearded-icons",
  "workbench.colorTheme": "Community Material Theme Ocean High Contrast",
}
